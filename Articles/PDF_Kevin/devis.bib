file = {:Users/Administrator/Documents/uqar/Project/Litterature/Rudels{\_}et{\_}all{\_}1996{\_}Formation and evolution of the surface mixed layer and halocline of the Artic Ocean.pdf:pdf},
journal = {Journal ff Geophysical ResearchOceans},
keywords = {http://dx.doi.org/10.1029/96JC00143, doi:10.1029/9},
number = {C4},
pages = {8807--8821},
title = {{Formation and evolution of the surface mixed layer and halocline of the Arctic Ocean}},
