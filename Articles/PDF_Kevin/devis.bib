doi = {10.1016/j.jcp.2009.12.011},
file = {:Users/Administrator/Documents/uqar/Project/Litterature/Lemieux{\_}et{\_}al{\_}2010{\_}imporving{\_}FNKJ.pdf:pdf},
isbn = {0021-9991},
issn = {10902716},
journal = {Journal of Computational Physics},
keywords = {Newton-Krylov method,Numerical convergence,Sea ice,Viscous-plastic rheology},
number = {8},
